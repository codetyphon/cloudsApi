extends layout
block content
    link(rel='stylesheet', href='/snailpi/home.css')
    div.box
        p='你的邀请码是：'
            span=invite
        p='你可以把这个链接发送给好友：'
        p='http://'+host+'/invite/'+invite
        - if(invite_users)
            p='你邀请了：'
        -each u in invite_users
            li
                div.name=u.fullname
    div#back_to_top
    script(src='/javascripts/jquery.imgloader.js')
    script(src='/javascripts/jquery.backtotop.js')
    script(src='/snailpi/home.js')