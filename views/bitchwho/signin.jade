extends layout
block content
    link(rel='stylesheet', href='/bitchwho/index.css')
    div#bg
    div.index_box
        h1.logo.hide_text=title
        h2.subtitle=subtitle
        div.register_form
            div.group_inputs
                div.input_wrapper
                    input(name='fullname',placeholder='用户名').fullname
                div.input_wrapper
                    input(name='passwd',placeholder='密  码').passwd
            button.sign_button.submit='登陆'+title
    script(src='/bitchwho/signin_signup_bg.js')
    script(src='/bitchwho/signin.js')